{
	"name": "Xdebug helper 2",
	"description": "Xdebug helper 2",
	"homepage_url": "https://github.com/rudiedirkx/xdebug-helper-for-chrome2",
	"version": "1.0",

	"manifest_version": 2,
	"minimum_chrome_version": "20",
	"permissions": [ "storage", "webRequest", "webRequestBlocking", "tabs", "*://*/*" ],
	"icons": {
		"16": "images/icon--16.png",
		"48": "images/icon--48.png",
		"128": "images/icon--128.png",
		"256": "images/icon--256.png",
		"512": "images/icon--256.png"
	},

	"browser_action": {
		"default_icon": "images/bug-gray.png",
		"default_title": "Toggle Xdebug"
	},
	"background": {
		"scripts": [ "xdebug2.logic.js", "xdebug2.background.js" ],
		"persistent": true
	},
	"options_ui": {
		"page": "options/options.html",
		"open_in_tab": false
	}
}
